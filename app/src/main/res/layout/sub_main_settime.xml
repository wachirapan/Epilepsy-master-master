<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtheadname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="ชื่อยา : "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/txtdetailname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="ชื่อยา......"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/txtheadname"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/txtcategor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="ก่อนอาหาร"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/txtdetailname"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/txtduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="เวลากินยา............."
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtamount"
        app:layout_constraintStart_toEndOf="@+id/txtamount" />

    <TextView
        android:id="@+id/txtamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="จำนวนยา"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/txtheadname"
        app:layout_constraintTop_toBottomOf="@+id/txtheadname" />

    <Button
        android:id="@+id/delsittiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorreddel"
        android:text="ลบ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp" />

